<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_cart"
        android:supportsRtl="true"
        android:theme="@style/Theme.Splash"
        tools:targetApi="34">
        <activity
            android:name=".layout.forgot_password.presenter.ForgotPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".layout.register.presenter.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".PaymentsActivity"
            android:exported="false" />
        <activity
            android:name=".layout.home.presenter.ui.home.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".layout.presenter.OffersActivity"
            android:exported="false" />
        <activity
            android:name=".layout.login.presenter.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
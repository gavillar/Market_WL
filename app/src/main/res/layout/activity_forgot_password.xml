<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forgotPasswordActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".layout.forgot_password.presenter.ForgotPasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/forgotPasswordToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">
            <LinearLayout
                style="@style/tool_bar_linear_layout">
                <ImageView
                    android:id="@+id/forgotPasswordToolbarBack"
                    style="@style/tool_bar_icon"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_arrow_back"/>
                <com.example.market_wl.components.TextViewComponent
                    style="@style/tool_bar_title"
                    android:id="@+id/forgotPasswordToolbarTitle"/>
                <ImageView
                    style="@style/tool_bar_icon"
                    android:id="@+id/forgotPasswordToolbarExit"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_exit"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/forgotPasswordActivityFragmentContainerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph_forgot_password"/>
        <com.example.market_wl.components.ButtonComponent
            android:id="@+id/forgotPasswordNextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continuar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
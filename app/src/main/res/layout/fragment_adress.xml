<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/adress_fragment"
    android:background="@drawable/background"
    tools:context=".layout.address.presenter.AdressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/background">


        <com.example.market_wl.components.EditTextComponent
            android:id="@+id/edit_cep"
            android:inputType="textEmailAddress"
            android:hint="@string/addres_cep"
            android:layout_marginTop="60dp"
            style="@style/edit_Text"/>

        <com.example.market_wl.components.EditTextComponent
            android:id="@+id/edit_addres_street"
            android:inputType="textEmailAddress"
            android:hint="@string/addres_street"
            android:layout_marginTop="60dp"
            style="@style/edit_Text"/>

        <com.example.market_wl.components.EditTextComponent
            android:id="@+id/edit_addres_number"
            android:inputType="textEmailAddress"
            android:hint="@string/addres_number"
            android:layout_marginTop="60dp"
            style="@style/edit_Text"/>

        <com.example.market_wl.components.EditTextComponent
            android:id="@+id/editEmail"
            android:inputType="textEmailAddress"
            android:hint="@string/addres_city"
            android:layout_marginTop="60dp"
            style="@style/edit_Text"/>





    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.cart.presenter.fragments.CartFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_cart"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/recyclerBottomSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/recyclerBottomSpace"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_cart">

        <TextView
            android:id="@+id/text_subtotal_cart"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:text="SubTotal"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/text_amount_cart"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:text="R$ 140,00"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <com.example.market_wl.components.ButtonComponent
            android:id="@+id/confirm_buy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="@string/finalizar_pedido" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/fragmentLogin">
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.example.market_wl.layout.login.presenter.ui.login.LoginFragment"
        android:label="login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_fragmentLogin_to_forgotPasswordActivity"
            app:destination="@id/forgotPasswordActivity" />
        <action
            android:id="@+id/action_fragmentLogin_to_registerActivity"
            app:destination="@id/registerActivity" />
    </fragment>
    <activity
        android:id="@+id/forgotPasswordActivity"
        android:name="com.example.market_wl.layout.forgot_password.presenter.ForgotPasswordActivity"
        android:label="activity_forgot_password"
        tools:layout="@layout/activity_forgot_password" />
    <activity
        android:id="@+id/registerActivity"
        android:name="com.example.market_wl.layout.register.presenter.RegisterActivity"
        android:label="activity_register"
        tools:layout="@layout/activity_register"/>
</navigation>